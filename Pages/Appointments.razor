@page "/appointments"

<h1>Appointments</h1>
@if (_appoinments == null || _appoinments.Count() <= 0)
{
    <div class="alert alert-danger mt-4">
        <p>No appointments available</p>
    </div>
}
else
{
    <ul class="list-group mt-4">
        @for (int i = 0; i < _appoinments.Count(); i++)
        {
            var app = _appoinments[i];
            var imgSrc = $"images/stylist{app.StylistId}.jpeg";
            string styling = "list-group-item d-flex flex-row";
            if (i % 2 == 0)
            {
                styling = "list-group-item bg-light d-flex flex-row";
            }
            <li class="@styling">
                <img src="@imgSrc" style="width:100px;height:auto" class="me-4" />
                <div class="align-self-center mt-2">
                    <b>@app.StartTime</b>
                    <br />
                    <small class="text-muted">@app.Stylist!.Name : @app.Service!.Duration mins</small>
                    <p>
                        Appointment for @app.Service!.Name
                    </p>
                </div>
            </li>
        }
    </ul>
}

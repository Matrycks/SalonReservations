<div class="calendar">
    <div class="month">
        <ul>
            <li class="prev" @onclick='() => MonthChanged("prev")'>&#10094;</li>
            <li class="next" @onclick='() => MonthChanged("next")'>&#10095;</li>
            <li>@Date.ToString("MMMM")<br><span style="font-size:18px">@Date.Year</span></li>
        </ul>
    </div>

    <ul class="weekdays">
        <li>Mo</li>
        <li>Tu</li>
        <li>We</li>
        <li>Th</li>
        <li>Fr</li>
        <li>Sa</li>
        <li>Su</li>
    </ul>

    <ul class="days">
        @{
            int numOfDays = DateTime.DaysInMonth(Date.Year, Date.Month);
            for (int i = 1; i <= numOfDays; i++)
            {
                DateTime curDate = new DateTime(Date.Year, Date.Month, i);
                if (IsSelectedDate(curDate))
                {
                    <li>
                        <span class="active" @onclick="() => DayClicked(curDate.Day)">@i</span>
                    </li>
                }
                else
                {
                    <li @onclick="() => DayClicked(curDate.Day)">@i</li>
                }
            }
        }
    </ul>
</div>